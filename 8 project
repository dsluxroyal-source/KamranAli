tasks = []
print("ðŸ“‹ Welcome to the To-Do App")
print("Type the number to choose an option.\n")
while True:
    print("\nMenu:")
    print("1. Add a task")
    print("2. View tasks")
    print("3. Delete a task")
    print("4. Exit")
    choice = input("Enter your choice (1-4): ")
    if choice == "1":
        task = input("Enter a new task: ")
        tasks.append(task)
        print("âœ… Task added successfully.")
    elif choice == "2":
        if not tasks:
            print("ðŸ“­ No tasks found.")
        else:
            print("\nYour Tasks:")
            for index, task in enumerate(tasks, start=1):
                print(f"{index}. {task}")
    elif choice == "3":
        if not tasks:
            print("ðŸ“­ No tasks to delete.")
        else:
            for index, task in enumerate(tasks, start=1):
                print(f"{index}. {task}")
            task_num = input("Enter task number to delete: ")
            if task_num.isdigit():
                task_num = int(task_num)
                if 1 <= task_num <= len(tasks):
                    removed_task = tasks.pop(task_num - 1)
                    print(f"ðŸ—‘ï¸ Removed task: {removed_task}")
                else:
                    print("âŒ Invalid task number.")
            else:
                print("âŒ Please enter a valid number.")
    elif choice == "4":
        print("ðŸ‘‹ Goodbye! Stay productive.")
        break
    else:
        print("âŒ Invalid choice. Please select 1 to 4.")