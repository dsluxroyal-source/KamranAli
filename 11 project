import speech_recognition as sr
import pyttsx3
engine = pyttsx3.init()
def speak(text):
    engine.say(text)
    engine.runAndWait()
def listen():
    recognizer = sr.Recognizer()
    with sr.Microphone() as source:
        print("Listening...")
        recognizer.pause_threshold = 1
        audio = recognizer.listen(source)
    try:
        text = recognizer.recognize_google(audio)
        print("You said:", text)
        return text.lower()
    except:
        return ""
speak("Hello. I am Jarvis. Speak something.")
while True:
    command = listen()
    if command == "":
        speak("I did not hear anything.")
    elif command == "exit" or command == "quit" or command == "stop":
        speak("Goodbye. Jarvis signing off.")
        break
    else:
        speak(f"You said {command}")